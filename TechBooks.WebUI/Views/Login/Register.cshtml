@model TechBooks.WebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Register", "Login"))
        {
            @Html.AntiForgeryToken()

            <fieldset class="border p-2">
                <legend class="float-none w-auto">New User (register here)</legend>
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })

                @Html.LabelFor(model => model.PasswordRepeat, htmlAttributes: new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.PasswordRepeat, "", new { @class = "text-danger" })
                @Html.PasswordFor(model => model.PasswordRepeat, new { @class = "form-control" })

                <input type="submit" value="Register" class="btn btn-primary vspace" />
            </fieldset>
            <br />
            <p>Already have an account?</p>
            <a href="SignIn">Click here to sign in</a>
        }
    </div>
</div>
