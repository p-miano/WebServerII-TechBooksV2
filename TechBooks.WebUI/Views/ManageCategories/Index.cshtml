@model IEnumerable<TechBooks.Models.Category>

@{
    ViewBag.Title = "Manage Categories";
}

<p>
    @Html.ActionLink("Click here to Add", "AddOrUpdate", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.CategoryId)*@
                @item.CategoryId
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Description)*@
                @item.Description
            </td>
            <td>
                @Html.ActionLink("Update", "AddOrUpdate", new { id = item.CategoryId }, new { @class = "btn btn-outline-primary" })
                @using (Html.BeginForm("Remove", "ManageCategories"))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("CategoryId", item.CategoryId)
                    <input type="submit" value="Remove" class="btn btn-danger" onclick="return removeConfirmation();" />
                }
            </td>
        </tr>
    }
</table>
